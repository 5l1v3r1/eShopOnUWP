<UserControl
    x:Class="eShop.UWP.Views.SignInWithPasswordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="320">

    <StackPanel Width="320">
        <TextBox Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="17" PlaceholderText="User name" Background="White" BorderThickness="1" BorderBrush="#eee" />
        <Rectangle Margin="8" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <PasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="17" PlaceholderText="Password" BorderThickness="1" BorderBrush="#eee" />
            <Button Grid.Column="1" Padding="5" BorderThickness="1" BorderBrush="LightGray" Command="{Binding LoginWithPasswordCommand}">
                <SymbolIcon Symbol="Forward" />
            </Button>
        </Grid>
    </StackPanel>

</UserControl>
